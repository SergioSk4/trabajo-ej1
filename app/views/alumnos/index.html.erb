<h1>Alumnos</h1>

<form class="form-inline" action="/alumnos" method="get">
  <div class="form-group mx-sm-3 mb-2">
    <label for="inputPassword2" class="sr-only">Busqueda</label>
    <input type="text" class="form-control" id="buscar" placeholder="Ingrese nombre a buscar" name="buscar" value="<%= params[:buscar] %>">
  </div>
  <button type="submit" class="btn btn-dark">Buscar</button>
  <a href="/alumnos" class="btn btn-dark">Limpiar</a>
</form>
<hr>

<div id="alumnos">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Grado</th>
      <th scope="col">Edad</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>

  <tbody>
  <% @alumnos.each do |alumno| %>
    <tr>
      <th scope="row"><%= alumno.nombre%></th>
      <td><%= alumno.grado%></td>
      <td><%= alumno.edad%></td>
      <td class="action-container">
      <%= link_to alumno, :class=>"action-link" do %>
        <div class="action-btn">
          <i class='bx bxs-user'></i>
          <p>Ver</p>
        </div>
      <% end %>
      <%= link_to edit_alumno_path(alumno), :class=>"action-link" do %>
        <div class="action-btn">
          <i class='bx bxs-pencil'></i>
          <p>Editar</p>
        </div>
      <% end %>
      <%= link_to notas_alumno_path(alumno), :class=>"action-link" do %>
        <div class="action-btn">
          <i class='bx bxs-notepad'></i>
          <p>Notas</p>
        </div>
      <% end %>
      <%=button_to alumno, method: :delete, :class=>"action-link" do %>
        <div class="action-btn">
          <i class='bx bxs-trash-alt' ></i>
          <p>Borrar</p>
        </div>
      <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<%= link_to "Nuevo alumno", new_alumno_path, :class=>"btn btn-dark"  %><br> <br> <br>


<%= paginate @alumnos, theme: 'bootstrap-5',
    pagination_class: "pagination-sm flex-wrap justify-content-center",
    nav_class: "d-inline-block" %>
    <hr>