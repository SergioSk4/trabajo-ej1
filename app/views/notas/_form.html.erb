
<%= simple_form_for(@nota) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :curso %>
    <%= f.association :alumno %>
    <%= f.input :parcial1 %>
    <%= f.input :parcial2 %>
    <%= f.input :zona %>
    <%= f.input :examen %>
    <%= f.input :total %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
